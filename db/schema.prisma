// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --------------------------------------

model Share {
  id        Int      @id @default(autoincrement())
  urlHash   String   @unique
  createdAt DateTime @default(now())
  options   Options?
}

// TODO: Limit entries on server and client
model Options {
  share         Share   @relation(fields: [shareId], references: [id])
  shareId       Int
  filename      String
  memory        Int
  pterodactyl   Boolean
  modernVectors Boolean
  gui           Boolean
  autoRestart   Boolean
  flags         String
  environment   String
}
